$('#update_thought_wall_spinner').hide();
updateRecentCodeTitle('<%= @thought_wall.code %>', '<%= escape_javascript(@thought_wall.title) %>')
updateStarMenuTitle('<%= escape_javascript(@thought_wall.code) %>', '<%= escape_javascript(@thought_wall.title) %>')

<% if @star_display %>
  updateStarDisplay('<%= "\u2605" %>')
  
<% else %>
  updateStarDisplay('<%= "\u2606" %>')
  $('#star-menu-item-<%= @thought_wall.code %>').remove()
<% end %>

updatePageTitle('<%= escape_javascript(@thought_wall.title) %>')

setNextThoughtWallRefreshDelay(minThoughtWallRefreshDelay);
delayAction(ajaxRefreshPage, minThoughtWallRefreshDelay);

<% unless current_user %>
  <% if @star_was_clicked %>
    showStarDiv()
  <% end %>
<% end %>